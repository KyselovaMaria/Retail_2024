{
  "ts-node": {
    "transpileOnly": true,
    "require": []
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es2019"],
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}